{
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "shell": {
      "type": "shellcheck",
      "include": [
        "(\\.sh$)"
      ]
    },
    "pep8": {
      "type": "pep8",
      "include": [
        "(\\.py$)"
      ],
      "severity": {
        "E401": "warning"
      }
    },
    "flake8": {
      "type": "flake8",
      "include": [
        "(\\.py$)"
      ],
      "severity": {
        "E901": "advice"
      }
    },
    "filename": {
      "type": "filename"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    }
  }
}
